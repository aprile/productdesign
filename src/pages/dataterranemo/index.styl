body#dtn
  --accent #c08a39

  .intro
    &.left
      background-image url('/images/dtn-0.jpg')

    &.right
      background-color #E1AA55

  .page-footer
    .voltra
      cursor url('/images/cursor-voltra.png'), pointer
    .islandjoy
      cursor url('/images/cursor-islandjoy.png'), pointer

  .copy
    padding 100px 0
