body#maisonapothecare
  --accent #aa6488

  .intro
    background-color var(--accent)
    &.left
      background-image url('/images/maisonapothecare-8.png')
    &.right
      h1
        letter-spacing 0px !important
        font-size 70px !important
        line-height 70px !important

  .colour-grid > *
    height 200px
    font 14px var(--mono)
    letter-spacing 1px
    padding 20px
    flex-basis 33.333%
    @media $portrait
      flex-basis 50%
      padding 20px
      height 50vw
    @media $mobile
      flex-basis 50%
      padding 20px
      height 50vw
    @media $desktop
      height 20vw
      padding 30px
      flex-basis 20%
    @media $desktop-large
      padding 50px

    &.applecider
      background-color #aa6488
    &.pinkgrapefruit
      background-color #fd828b
    &.citrus
      background-color #fda328
    &.pumpkin
      background-color #e0843c
    &.charcoal
      background-color #707c7c
    &.lavender
      background-color #a1afe3
    &.eucalyptus
      background-color #1fc4b3
    &.lemonverbena
      background-color #97d429
    &.mint
      background-color #1cbb72
    &.spruce
      background-color #0d7166
