body#voltra
  --accent var(--red)

  .dark
    background-color #1e1f22

  .intro
    &.left
      background-size contain
      background-repeat no-repeat
      background-color #1e1f22
      background-image url('/images/voltra_desktop-2.png')

    &.right
      background-color var(--red)

  section.copy
    p
      max-width 700px
      margin 0 auto
    &.lightgray
      background-color #f8f8f8

  section.image-box
    background-color var(--accent)
    padding 100px 50px
    &.dark
      background-color #1e1f22
    img
      width 80%
      margin 0 auto
      display block

  .font-grid
    width 100%
    height 650px
    position relative
    overflow hidden
    .font
      width 100%
      height 100%
      position absolute
      top 0
      bottom 0
      background-repeat no-repeat
      background-color #1e1f22
      border-left 1px solid white
      transition transform 0.2s ease
      &:nth-of-type(1)
        left 0
        background-image url('/images/voltra_font-1.svg')
        z-index 1
        border-left 0
        &:hover ~ .font:nth-of-type(2)
          transform translateX(50%)
        &:hover ~ .font:nth-of-type(3)
          transform translateX(75%)
      &:nth-of-type(2)
        transform translateX(25%)
        background-image url('/images/voltra_font-2.svg')
        z-index 1
        &:hover ~ .font:nth-of-type(3)
          transform translateX(90%)
      &:nth-of-type(3)
        transform translateX(50%)
        background-image url('/images/voltra_font-3.svg')
        z-index 1
      .caption
        color white
        position absolute
        bottom 30px
        left 30px

  .colour-grid > *
    flex-basis 20%
    height 20vw
    padding 50px
    font-family 'Overpass Mono', monospace
    letter-spacing 1px
    font-size 14px

  .white
    background-color white

  .lightgray
    background-color var(--lightgray)

  .mediumgray
    background-color var(--mediumgray)

  .darkgray
    color white
    background-color var(--darkgray)

  .black
    color white
    background-color var(--black)

  .gold
    background-color var(--gold)

  .red
    background-color var(--red)

  .purple
    background-color var(--purple)

  .blue
    background-color var(--blue)

  .green
    background-color var(--green)


