@require './variables.styl'
@require './functions.styl'

*
  box-sizing border-box

body
  margin 0
  padding 0
  font-family var(--primary)
  background-color #191919

  main
    background-color white
    // cursor url('/images/cursor-black.png'), pointer

  .cursor-light
    // cursor url('/images/cursor-white.png'), pointer

  h1, h2, h3
    font-weight normal

  h1
    font normal 40px var(--primary)
    margin-bottom 70px
    margin-top 0

  h2
    font bold 22px var(--secondary)
    text-transform uppercase
    letter-spacing 1px
    margin-bottom 30px

  h4
    font-family var(--secondary)
    text-transform uppercase
    font-size 14px
    margin-top 40px

  p
    font-weight 300
    font-size 24px
    line-height 34px
    @media $mobile
      font 20px/28px var(--primary)

  blockquote
    margin 0
    font-size 32px
    line-height 42px

  hr
    border 0
    border-top 1px solid #eaeaea
    margin 50px 0
    &.spacer
      border-top 0

  img
    max-width 100%

  ul
    list-style none
    padding 0
    margin 0

  a
    color inherit
    text-decoration none

  nav
    height 70px
    font 20px var(--secondary)
    display flex
    padding 20px
    position fixed
    top 0
    left 0
    right 0
    border-bottom 1px solid black
    > *
      flex-basis 33.3333%

    .top-left
      font-family var(--primary)
      font-weight bold
      letter-spacing 1px
      margin 3px 0

    .top-center
      font-weight 600
      text-align center
      text-transform uppercase
      letter-spacing 2px

    .top-right
      text-align right

  section.copy
    padding 0
    margin 80px auto
    @media $mobile
      margin 50px auto

  .copy
    max-width 700px
    margin 0 auto
    width 70%
    @media $desktop-large
      width 50%
    @media $mobile
      width 80%

  .flex
    display flex
    flex-wrap wrap
    &.center
      justify-content center

    .flex-25
      flex-basis 25%
    .flex-33
      flex-basis 33.3333%
    .flex-50
      flex-basis 100%
      @media $desktop
        flex-basis 50%
    .flex-75
      flex-basis 90%
      @media $desktop
        flex-basis 75%

  .intro
    height 60vh
    max-height 1050px
    @media $mobile
      height 50vh
    @media $desktop
      height 100vh

    &.left
      background-size cover
      background-position center

    &.right
      padding 60px
      padding-top 100px
      @media $mobile
        padding 40px
        padding-top 100px

      h1
        font 600 100px/100px var(--secondary)
        text-transform uppercase
        letter-spacing 5px
        margin 50px 0
        @media $mobile
          font 600 60px/60px var(--secondary)
          letter-spacing 2px
          margin 0

      .caption
        font-family var(--mono)
        font-size 14px

  .view-site
    margin-top 30px
    a
      color var(--accent)
      font bold 20px var(--mono)
      text-decoration underline
      &:hover
        text-decoration none

  .image-small
    padding 50px 0
    @media $desktop
      padding 150px 0
    .flex-50
      text-align center

  ul.bulleted
    font-size 18px
    list-style square
    margin-left 18px
    line-height 31px

  .caption
    margin-top 20px
    font-family var(--mono)
    font-size 12px

  .credits
    font-family var(--mono)
    padding 15px 30px
    font-size 14px
    border 1px solid black

    ul
      margin 8px 0

  .page-footer
    border-top 1px solid black
    border-bottom 1px solid black
    .wrapper
      display flex
      > *
        flex-basis 50%
        padding 40px
        p
          font 600 22px/26px var(--secondary)
          text-transform uppercase
          letter-spacing 2px
        &:first-of-type
          border-right 1px solid black
        &:last-of-type
          text-align right
    .bullet
      display inline-block
      width 30px
      height 30px
      border-radius 50%
