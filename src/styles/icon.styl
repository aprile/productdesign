.iconset
  background-color #1d1e22
  display flex
  flex-wrap wrap
  justify-content center
  padding 100px
  @media $desktop-large
    align-items flex-start
  @media $mobile
    padding 0

.icon
  padding 55px 45px 35px 45px
  margin 0
  display inline-block
  position relative
  border 1px solid transparent
  &:hover > span
    visibility visible
  &:hover
    border 1px solid var(--border)
    z-index 1
    Scale(1.5)

  span
    color white
    width 100%
    text-transform uppercase
    letter-spacing 1px
    font-size 8px
    text-align center
    padding 5px
    display block
    CenterX()
    top 10px
    visibility hidden

  svg
    Icon(30px, white)
